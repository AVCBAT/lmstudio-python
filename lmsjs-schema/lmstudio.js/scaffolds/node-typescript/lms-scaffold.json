{
  "$schema": "./../scaffold-json-schema-v1.json",
  "scaffoldVersion": 1,
  "name": "node-typescript",
  "displayName": "Node.js with TypeScript",
  "description": "Example Node.js TypeScript project with lmstudio.js",
  "args": [
    {
      "name": "Project Name",
      "default": "node-typescript",
      "replaceFrom": ["@lmstudio/scaffold-node-typescript", "<PROJECT_NAME>"],
      "isProjectName": true
    }
  ],
  "renames": [{ "from": "gitignore_template", "to": ".gitignore" }],
  "motd": [
    { "type": "title", "text": "âœ“ Project Creation Successful" },
    {
      "type": "regular",
      "text": "An example Node.js TypeScript project with lmstudio.js has been created in the <hl><PROJECT_NAME></hl> folder. You can enter it with:"
    },
    { "type": "command", "text": "cd <PROJECT_NAME>" },
    { "type": "regular", "text": "Then you can run the project with:" },
    { "type": "command", "text": "npm start" }
  ]
}
