{
    // Default URI scheme for opening files
    "files.defaultUriScheme": "file",
    // File associations to specify how certain file extensions are interpreted
    "files.associations": {
        "*.jsonc": "jsonc"
    },
    // Exclude specific folders from file watching to improve performance
    "files.watcherExclude": {
        "**/node_modules": true,
        "**/.git": true
    },
    // Automatically save files when focus is lost
    "files.autoSave": "onFocusChange",
    // Delay in milliseconds before auto-saving files
    "files.autoSaveDelay": 1000,
    // Default folder path for opening files
    "files.defaultFolderPath": "/mnt/lmstudio-python",
    // Default file path for creating new files
    "files.defaultFilePath": "/mnt/lmstudio-python"
}